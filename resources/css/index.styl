amber = #ffb300
amber-darken = #ff8f00
green = #43a047
green-darken = #2e7d32
red = #e53935
red-darken = #c62828
gray = #616161
gray-darken = #212121

html, body
	font-size: 125%
	font-family: 'Noto Sans', -apple-system, BlinkMacSystemFont, "Segoe UI", "Fira Sans", sans-serif
	width: 100%
	// max-width: 960px
	margin: auto
	// padding: 1rem
	header
		h1
			text-align: center
	main
		p.fetching
			text-align: center
		.card
			&.certified_fresh
				background: amber;  /* fallback for old browsers */
				background: -webkit-linear-gradient(to right, amber-darken, amber);  /* Chrome 10-25, Safari 5.1-6 */
				background: linear-gradient(to right, amber-darken, amber); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
			&.fresh
				background: green;  /* fallback for old browsers */
				background: -webkit-linear-gradient(to right, green-darken, green);  /* Chrome 10-25, Safari 5.1-6 */
				background: linear-gradient(to right, green-darken, green); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
			&.rotten
				background: red;  /* fallback for old browsers */
				background: -webkit-linear-gradient(to right, red-darken, red);  /* Chrome 10-25, Safari 5.1-6 */
				background: linear-gradient(to right, red-darken, red); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
			&.no-consensus
				background: gray;  /* fallback for old browsers */
				background: -webkit-linear-gradient(to right, gray-darken, gray);  /* Chrome 10-25, Safari 5.1-6 */
				background: linear-gradient(to right, gray-darken, gray); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
			div.card-image
				// img
				// 	height: 100%
				// 	width: 200px !important
				span.card-title
					font-size: 3rem
					line-height: 3rem
					font-weight: bold
			div.card-content
				display: flex
				justify-content: space-between
				width: 100%
				span
					display: flex !important
					flex-direction: column
					justify-content: center
					&.movie-score
						font-size: 3rem
						font-weight: bold
