html, body
	text-align: center
	font-size: 125%
	font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Fira Sans", sans-serif
	h1
		letter-spacing: .125em
	input[type=text]
		width: 95%
		margin: auto
		font-size: 1.5rem
		line-height: 2em
		padding: 0 .5rem
	pre
		font-size: 10pt
		text-align: left
	ul
		list-style-type: none
		width: 98%
		padding: 1rem 0
		margin: auto
		a
			text-decoration: none
			li
				display: flex
				padding: 1rem
				margin-bottom: 1rem
				border-radius: .25rem
				color: white
				background: black
				&.certified_fresh
					background: linear-gradient(to right, orangered 0%, gold 75%)
					color: black
				&.fresh
					background: linear-gradient(to right, darken(green, 50%) 0%, green 75%)
				&.rotten
					background: linear-gradient(to right, darken(maroon, 50%) 0%, maroon 75%)
				&.no-consensus
					span:last-of-type
						font-size: 1rem
				span
					flex-grow: 1
					max-width: 57.5%
					&:first-of-type
						text-align: left
						line-height: 1.6rem
					&:last-of-type
						text-align: right
						line-height: 3.2rem
						font-size: 2rem
						font-weight: bold
